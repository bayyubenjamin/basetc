{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "plugins": [{ "name": "next" }],
    "strict": false,

    // ⬇⬇⬇ Tambahkan baris ini
    "typeRoots": ["./node_modules/@types", "./app/types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // ⬇⬇⬇ Tambahkan baris ini
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next", "supabase/functions/**"]
}

